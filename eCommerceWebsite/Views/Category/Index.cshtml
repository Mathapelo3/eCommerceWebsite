@model eCommerceWebsite.ViewModel.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row" p-3>
        <div class="col-6 ">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="CreateUpdate"><i class="bi bi-plus-circle">Create New Category</i></a>
        </div>      
    </div>

</div>
<table class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>

    </thead>
    <tbody>
      @foreach (var item in Model.categories) 
      {

        <tr>
             <td>
                 @item.Name
             </td>
             <td>
                 @item.DisplayOrder
             </td>
            <td role="group">
                   <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencile-square">Edit</i></a> |
                   <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>@*@Html.ActionLink("Delete", "Delete", new {  id=item.Id })*@
            </td>
        </tr>
      }
    </tbody>
</table>
